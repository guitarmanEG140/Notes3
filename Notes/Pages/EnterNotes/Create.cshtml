@page
@model Notes.Pages.EnterNotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Note: You Must Enter A User ID of 1, 2, or 3 and a Category ID of 1, 2, or 3, or create a new user or category, 
    Id's are set up with Identity (1,1) so adding one new user will create a new user ID "4". Error trapping on invalid
    UserID's and Category ID's is beyond the scope of this assignment.</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.Title" class="control-label"></label>
                <input asp-for="Note.Title" class="form-control" />
                <span asp-validation-for="Note.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Notes" class="control-label"></label>
                <input asp-for="Note.Notes" class="form-control" />
                <span asp-validation-for="Note.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.CategoryID" class="control-label"></label>
                <input asp-for="Note.CategoryID" class="form-control" />
                <span asp-validation-for="Note.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Note.IsDeleted" />
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Note.userID" class="control-label"></label>
                <input asp-for="Note.userID" class="form-control" />
                <span asp-validation-for="Note.userID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
